# Game Server Environment Variables - Example Configuration
# Copy this file to .env and modify as needed

# Timezone configuration
TZ=Europe/Istanbul

# Satisfactory Server Configuration (wolveix/satisfactory-server)
# Note: This image doesn't support server name/password via env vars - configured in-game
SATISFACTORY_MAXPLAYERS=10
SATISFACTORY_DEBUG=false
SATISFACTORY_SKIPUPDATE=false
SATISFACTORY_STEAMBETA=false

# Palworld Server Configuration (jammsen/docker-palworld-dedicated-server)
# Private server setup for friends only
PALWORLD_SERVER_NAME=Proxmox Homelab Palworld
PALWORLD_SERVER_DESCRIPTION=Private Palworld Server for Friends
PALWORLD_ADMIN_PASSWORD=your_admin_password_here
PALWORLD_SERVER_PASSWORD=your_server_password_here
PALWORLD_MAX_PLAYERS=8
PALWORLD_PUBLIC_IP=
PALWORLD_COMMUNITY_SERVER=false
PALWORLD_RCON_ENABLED=true

# Watchtower Configuration
WATCHTOWER_POLL_INTERVAL=3600  # Check for updates every hour
WATCHTOWER_CLEANUP=true